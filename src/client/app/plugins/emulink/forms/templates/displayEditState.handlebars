<div class="form-center">
    <div class="panel panel-info shadow center">
        <div class="panel-heading">{{header}}</div>
        <form class="center form-horizontal" onsubmit="return false">
            <div class="panel-body" style="overflow-y: scroll; height: 240px;">
                <div class="form-group">
                    <label class="control-label col-sm-4"
                           for="newStateName">{{textLabel.newStateName}}</label>
                    <div class="col-sm-8">
                        <input id="newStateName"
                               class="form-control"
                               type="text"
                               value="{{curr_value.newStateName}}"
                               placeholder="{{curr_value.newStateName}}"
                               required="true"
                               style="padding: 6px 12px;"/>
                    </div>
                </div>
                <div class="form-group">
                    <label class="control-label col-sm-4"
                           for="newStateColor">{{textLabel.newStateColor}}</label>
                    <div class="col-sm-8">
                        <input id="newStateColor"
                               class="form-control"
                               type="text"
                               value="{{curr_value.newStateColor}}"
                               placeholder="{{curr_value.newStateColor}}"
                               required="true"
                               style="padding: 6px 12px;"/>
                    </div>
                </div>
                <div class="form-group">
                    <label class="control-label col-sm-4"
                           for="newStateEnter">{{textLabel.newStateEnter}}</label>
                    <div class="col-sm-8">
                        <textarea rows="1" cols="61" class="form-control"
                                  style="resize:vertical; font-family:Consolas,Monaco,Lucida Console,Liberation Mono,DejaVu Sans Mono,Bitstream Vera Sans Mono,Courier New, monospace;"
                                  id="newStateEnter"
                                   type="text"
                                   value={{curr_value.newStateEnter}}
                                   name="newStateEnter"
                                   placeholder="">{{curr_value.newStateEnter}}</textarea>
                    </div>
                </div>
                <div class="form-group">
                    <label class="control-label col-sm-4"
                           for="newStateExit">{{textLabel.newStateExit}}</label>
                    <div class="col-sm-8">
                        <textarea rows="1" cols="61" class="form-control"
                                  style="resize:vertical; font-family:Consolas,Monaco,Lucida Console,Liberation Mono,DejaVu Sans Mono,Bitstream Vera Sans Mono,Courier New, monospace;"
                                  id="newStateExit"
                                   type="text"
                                   value={{curr_value.newStateExit}}
                                   name="newStateExit"
                                   placeholder="">{{curr_value.newStateExit}}</textarea>
                    </div>
                </div>
            </div>
            <div class="panel-footer">
                <button type="button"
                        class="btn btn-danger left"
                        id="btnLeft">{{buttons.[0]}}</button>
                <button type="submit"
                        class="btn btn-success right"
                        id="btnRight">{{buttons.[1]}}</button>
            </div>
        </form>
    </div>
</div>
