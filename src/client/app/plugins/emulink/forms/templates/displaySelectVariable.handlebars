<div class="form-center">
    <div class="card panel panel-info shadow center">
        <div class="card-header panel-heading">{{header}}</div>
        <form class="center form-horizontal" onsubmit="return false">
            <div class="card-body panel-body" style="overflow-y: scroll; height: 180px;">
                <div class="form-group">
                    <label class="control-label col-sm-4"
                           for="selectedVariable">{{message}}</label>
                    <div class="col-sm-8">
                        <select id="selectedVariable"
                                class="form-control"
                                type="text"
                                value=""
                                required="true">
                            {{#each variables}}
                            <option value="{{this}}">{{this}}</option>
                            {{/each}}
                        </select>
                    </div>
                </div>                
            </div>
            <div class="card-footer panel-footer">
                <button type="button"
                        class="btn btn-danger left"
                        id="btnLeft">{{buttons.[0]}}</button>
                <button type="submit"
                        class="btn btn-success right"
                        id="btnRight">{{buttons.[1]}}</button>
            </div>
        </form>
    </div>
</div>