<div class="form-center">
    <div class="card panel panel-info shadow center">
        <div class="card-header panel-heading">{{header}}</div>
        <form class="center form-horizontal" onsubmit="return false">
            <div class="card-body panel-body" style="overflow-y: scroll; height: 220px;">
                <div class="form-group">
                    <label class="control-label col-sm-4"
                           for="newVariableName">{{textLabel.newVariableName}}</label>
                    <div class="col-sm-8">
                        <input id="newVariableName"
                               class="form-control"
                               type="text"
                               value=""
                               placeholder="{{placeholder.newVariableName}}"
                               required="true"
                               style="padding: 6px 12px;"/>
                    </div>
                </div>
                <div class="form-group">
                    <label class="control-label col-sm-4"
                           for="newVariableType">{{textLabel.newVariableType}}</label>
                    <div class="col-sm-8">
                        <input id="newVariableType"
                               class="form-control"
                               type="text"
                               value=""
                               placeholder="{{placeholder.newVariableType}}"
                               required="true"
                               style="padding: 6px 12px;"/>
                    </div>
                </div>
                <div class="form-group">
                    <label class="control-label col-sm-4"
                           for="newVariableValue">{{textLabel.newVariableValue}}</label>
                    <div class="col-sm-8">
                        <input id="newVariableValue"
                               class="form-control"
                               type="text"
                               value=""
                               placeholder="{{placeholder.newVariableValue}}"
                               required="true"
                               style="padding: 6px 12px;"/>
                    </div>
                </div>
                <div class="form-group">
                    <label class="control-label col-sm-4"
                           for="newVariableScope">{{textLabel.newVariableScope}}</label>
                    <div class="col-sm-8">
                        <select id="newVariableScope"
                                class="form-control"
                                type="text"
                                value=""
                                required="true">
                            {{#each scopeOptions}}
                            <option value="{{this}}">{{this}}</option>
                            {{/each}}
                        </select>
                    </div>
                </div>                
            </div>
            <div class="card-footer panel-footer">
                <button type="button"
                        class="btn btn-danger left"
                        id="btnLeft">{{buttons.[0]}}</button>
                <button type="submit"
                        class="btn btn-success right"
                        id="btnRight">{{buttons.[1]}}</button>
            </div>
        </form>
    </div>
</div>