<div class="form-center">
    <div class="card panel panel-info center dialog shadow">
        <div class="card-header panel-heading">{{header}}</div>
        <form class="center form-horizontal" onsubmit="return false" role="form">
            <div class="panel-body center">
                <div class="form-group">
                    <div class="col-sm-8">
                        <input id="file"
                               class="form-control"
                               type="file"
                               value=""
                               name="file"
                               accept="{{extensions}}"
                               required="true"
                               style="box-sizing: content-box;">
                    </div>
                </div>
            </div>
            <div class="card-footer panel-footer">
                <button type="button" class="btn btn-danger left" id="btnCancel">Cancel</button>
                <button type="submit" class="btn btn-success right" id="btnOk">OK</button>
            </div>
        </form>
    </div>
</div>