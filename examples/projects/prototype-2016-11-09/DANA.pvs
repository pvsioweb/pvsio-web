DANA: THEORY
 BEGIN

  %-- machine states
  MachineState: TYPE = { off, on }

  %-- emuchart state
  State: TYPE = [#
    current_state: MachineState,
    previous_state: MachineState,
    d: real,
	c: int
  #]

  %-- initial state
  init(x: real): State = (#
    current_state := on,
    previous_state := off,
    d := 0,
	c := -1 %-- not used in this version
  #)
  %-- utility functions
  enter_into(ms: MachineState)(st: State): State = st WITH [ current_state := ms ]
  leave_state(ms: MachineState)(st: State): State = st WITH [ previous_state := ms ]

  %-- transition functions
  per_turn_on(st: State): bool = ((current_state(st) = off))
  turn_on(st: (per_turn_on)): State =
    COND
    (current_state(st) = off)
     -> LET new_st = leave_state(off)(st)
         IN enter_into(on)(new_st)
    ENDCOND

  per_turn_off(st: State): bool = ((current_state(st) = on))
  turn_off(st: (per_turn_off)): State =
    COND
    (current_state(st) = on)
     -> LET new_st = leave_state(on)(st)
         IN enter_into(off)(new_st)
    ENDCOND

  per_click_DOWN(st: State): bool = ((current_state(st) = on) AND (d(st) > 0)) OR ((current_state(st) = on) AND (d(st) = 0))
  click_DOWN(st: (per_click_DOWN)): State =
    COND
    (current_state(st) = on) AND (d(st) > 0)
     -> LET new_st = leave_state(on)(st),
            new_st = new_st WITH [ d := d(st) - 0.1 ]
         IN enter_into(on)(new_st),
    (current_state(st) = on) AND (d(st) = 0)
     -> LET new_st = leave_state(on)(st),
            new_st = new_st WITH [ d := 10 ]
         IN enter_into(on)(new_st)
    ENDCOND
  press_DOWN(st: (per_click_DOWN)): State = click_DOWN(st)
  release_DOWN(st: (per_click_DOWN)): State = st

  per_click_UP(st: State): bool = ((current_state(st) = on) AND (d(st) < 10)) OR ((current_state(st) = on) AND (d(st) = 10))
  click_UP(st: (per_click_UP)): State =
    COND
    (current_state(st) = on) AND (d(st) < 10)
     -> LET new_st = leave_state(on)(st),
            new_st = new_st WITH [ d := d(st) + 0.1 ]
         IN enter_into(on)(new_st),
    (current_state(st) = on) AND (d(st) = 10)
     -> LET new_st = leave_state(on)(st),
            new_st = new_st WITH [ d := 0 ]
         IN enter_into(on)(new_st)
    ENDCOND
  press_UP(st: (per_click_UP)): State = click_UP(st)
  release_UP(st: (per_click_UP)): State = st

 END DANA
