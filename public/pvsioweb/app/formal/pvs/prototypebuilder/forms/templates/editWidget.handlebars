<form class="center dialog shadow form-horizontal" onsubmit="return false" role="form">
	<legend> Edit {{type}}</legend>
	{{#if isDisplay}}
	<div class="form-group">
		<label for="predefinedRegex" class="col-sm-4 control-label">Value Type</label>
		<div class="col-sm-8">
			<select id="predefinedRegex" name="predefinedRegex" required="true">
				<option id="optNumeric" value="[0-9/.]+" >Numeric</option>
				<option id="optString" value="\w+">String</option>
				<option id="optCustom" value="">Custom</option>
			</select>
		</div>
	</div>
	<div class="form-group">
		<label for="prefix" class="col-sm-4 control-label">PVS Area Id</label>
		<div class="col-sm-8">
			<input type="text" name="prefix" id="prefix" required class="form-control" value="{{prefix}}"/>
		</div>
	</div>
	<div class="form-group">
		<label for="regex" class="col-sm-4 control-label">Regex</label>
		<div class="col-sm-8">
			<input type="text" name="regex" id="regex" required class="form-control" value="{{regex}}"/>
		</div>
	</div>
	{{else}}
	<div class="form-group">
		<label for="functionText" class="col-sm-4 control-label">Base Function Name</label>
		<div class="col-sm-8">
			<input type="text" name="functionText" id="functionText" required class="form-control" value="{{functionText}}"/>
		</div>
	</div>
	<div class="form-group">
		<label for="events" class="col-sm-4 control-label">Bind Events</label>
		<div class="col-sm-8">
			<input type="checkbox" name="events" value="click"/>
			<label>
				Click
			</label>
			<input type="checkbox" name="events" value="press/release"/>
			<label>
				Press and Release
			</label>
		</div>
	</div>
	<div class="form-group">
		<label for="recallRate" class="col-sm-4 control-label">Recall Rate</label>
		<div class="col-sm-8">
			<input type="text" name="recallRate" id="recallRate" required class="form-control" value="{{recallRate}}" pattern="\d{2,5}"/>
		</div>
	</div>
	<div class="form-group">
		<label for="boundFunction" class="col-sm-4 control-label">Bound PVS Function</label>
		<div class="col-sm-8">
			<textarea id="boundFunction" type="text" readonly="true" class="form-control">{{boundFunctions}}</textarea>
		</div>
	</div>
	{{/if}}
	
	<div class="form-group">
		<div class="col-sm-offset-4 col-sm-8">
			<button type="button" class="btn btn-danger left" id="btnCancel">Cancel</button>
			<button type="submit" class="btn btn-success right" id="btnOk">OK</button>
		</div>
	</div>
</form>