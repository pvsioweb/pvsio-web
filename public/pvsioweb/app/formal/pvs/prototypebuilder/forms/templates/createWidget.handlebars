<form class="center dialog shadow form-horizontal" onsubmit="return false" role="form">
	<legend>Create Widget</legend>
	<ul class="nav nav-tabs" id="tabHeaders">
		<li><a href="#display" data-toggle="tab" id="displayTab">Display</a></li>
		<li><a href="#button" data-toggle="tab" id="buttonTab">Button</a></li>
	</ul>
	<div class="tab-content">
		<div class="tab-pane active" id="display">
			<div class="form-group">
				<label for="predefinedRegex" class="col-sm-4 control-label">Value Type</label>
				<div class="col-sm-8">
					<select id="predefinedRegex" name="predefinedRegex" required="true">
						<option id="optNumeric" value="[0-9/.]+" >Numeric</option>
						<option id="optString" value="\w+">String</option>
						<option id="optCustom" value="">Custom</option>
					</select>
				</div>
			</div>
			<div class="form-group">
				<label for="prefix" class="col-sm-4 control-label">PVS Area Id</label>
				<div class="col-sm-8">
					<input type="text" name="prefix" id="prefix" required class="form-control" value=""/>
				</div>
			</div>
			<div class="form-group">
				<label for="regex" class="col-sm-4 control-label">Regex</label>
				<div class="col-sm-8">
					<input type="text" name="regex" id="regex" required class="form-control" value=""/>
				</div>
			</div>
		</div>
		
		<div class="tab-pane" id="button">
			<div class="form-group">
				<label for="functionText" class="col-sm-4 control-label">Base Function Name</label>
				<div class="col-sm-8">
					<input type="text" name="functionText" id="functionText" required class="form-control" value=""/>
				</div>
			</div>
			<div class="form-group">
				<label for="events" class="col-sm-4 control-label">Events</label>
				<div class="col-sm-8">
					<label>
						Click
						<input type="checkbox" name="events" value="click"/>
					</label>
					<label>
						Press and Release
						<input type="checkbox" name="events" value="press/release"/>
					</label>
				</div>
			</div>
			<div class="form-group">
				<label for="recallRate" class="col-sm-4 control-label">Recall Rate</label>
				<div class="col-sm-8">
					<input type="text" name="recallRate" id="recallRate" required class="form-control" value="250" pattern="\d{2,5}"/>
				</div>
			</div>
			<div class="form-group">
				<label for="boundFunctions" class="col-sm-4 control-label">Bound PVS Functions</label>
				<div class="col-sm-8">
					<textarea id="boundFunctions" name="boundFunctions" type="text" readonly="true" class="form-control">
					</textarea>
				</div>
			</div>
		</div>
	</div>
	<div class="form-group">
		<div class="col-sm-offset-4 col-sm-8">
			<button type="button" class="btn btn-danger left" id="btnCancel">Cancel</button>
			<button type="submit" class="btn btn-success right" id="btnOk">OK</button>
		</div>

	</div>
</form>
