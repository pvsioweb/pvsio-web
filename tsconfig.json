{
	"compilerOptions": {
		"target": "es6",
		"module": "UMD",
		"moduleResolution": "node",
		"removeComments": true,
		"sourceMap": false,
		"outDir": "dist",
		"rootDir": "src",
		"lib": [ "es6", "dom" ],
		"baseUrl": ".",
		"paths": {
			"*": [ "node_modules/*", "node_modules/@types/*", "client/node_modules/*" ]
		},
		"types": [
			"handlebars", "jquery", "node", "express", "ws", "connect", "body-parser", "jasmine"
		],
		"typeRoots": [
            "node_modules/@types"
        ],
        "diagnostics": true,
		"allowJs": true
	},
	"include": [
		"./src/**/*",
	],
	"exclude": [
		"node_modules"
	]
}